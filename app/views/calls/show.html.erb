
<div class="page-header">
  <h1>

    <%= t 'calls.titles.show' %>

    <span class="pull-right">
      <div class="btn-group">
        <%= link_to calls_path, :class => 'btn' do %> <i class="icon-arrow-left"></i> <%= t("helpers.links.back") %>
        <% end %>
        <%= link_to edit_call_path(@call), :class => 'btn' do %>
            <i class="icon-edit"></i> <%= t("helpers.links.edit") %>
        <% end %>
        <%= link_to call_path(@call),
                    :method => 'delete',
                    :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                    :class => 'btn btn-danger' do %> <i class="icon-remove"></i> <%= t("helpers.links.destroy") %>
        <% end %>
      </div>
    </span>
  </h1>
</div>


<div class="row-fluid">
  <div class="span6">
    <div class="well well-small">
      <h3><%= t('calls.titles.call_information') %></h3>
      <hr>
      <dl class="dl-horizontal">
        <dt><strong><%= t('calls.fields.user') %>:</strong></dt>
        <dd><%= @call.user.full_name %></dd>
        <dt><strong><%= t('calls.fields.agent') %>:</strong></dt>
        <dd><%= @call.agent.full_name %></dd>
        <dt><strong><%= t('calls.fields.to_number') %>:</strong></dt>
        <dd><%= @call.to_number %></dd>
        <dt><strong><%= t('calls.fields.from_number') %>:</strong></dt>
        <dd><%= @call.from_number %></dd>
        <dt><strong><%= t('calls.fields.call_direction') %>:</strong></dt>
        <dd><%= @call.call_direction %></dd>
        <dt><strong><%= t('calls.fields.call_status') %>:</strong></dt>
        <dd><%= @call.call_status %></dd>
        <dt><strong><%= t('calls.fields.resource_uri') %>:</strong></dt>
        <dd><%= @call.resource_uri %></dd>
        <dt><strong><%= t('calls.fields.api') %>:</strong></dt>
        <dd><%= @call.api_id %></dd>
      </dl>
    </div>
  </div>
  <div class="span6">
    <div class="well well-small">
      <h3><%= t('calls.titles.billing_info') %></h3>
      <hr>
      <dl class="dl-horizontal">
        <dt><strong><%= t('calls.fields.call_uuid') %>:</strong></dt>
        <dd><%= @call.call_uuid %></dd>
        <dt><strong><%= t('calls.fields.parent_call_uuid') %>:</strong></dt>
        <dd><%= @call.parent_call_uuid %></dd>
        <dt><strong><%= t('calls.fields.call_duration') %>:</strong></dt>
        <dd><%= @call.call_duration %></dd>
        <dt><strong><%= t('calls.fields.total_amount') %>:</strong></dt>
        <dd><%= @call.total_amount %></dd>
        <dt><strong><%= t('calls.fields.bill_duration') %>:</strong></dt>
        <dd><%= @call.bill_duration %></dd>
        <dt><strong><%= t('calls.fields.billed_duration') %>:</strong></dt>
        <dd><%=  @call.billed_duration %></dd>
        <dt><strong><%= t('calls.fields.total_rate') %>:</strong></dt>
        <dd><%= @call.total_rate %></dd>
        <dt><strong><%= t('calls.fields.end_time') %>:</strong></dt>
        <dd><%=  t @call.end_time , format: :short %></dd>
        <dt><strong><%= t('shared.created_at') %>:</strong></dt>
        <dd><%= t @call.created_at, format: :short %></dd>
      </dl>
    </div>
  </div>
</div>








