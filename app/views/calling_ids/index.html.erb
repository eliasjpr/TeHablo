
<div class="page-header">
  <h1>
    <i class="icon-mobile-phone"></i>
    <%= t('callingids.titles.list') %>

    <span class="pull-right">
      <%= link_to new_calling_id_path, :class => 'btn btn-success' do %> <i class="icon-plus"></i>   <%= t('callingids.btn.add_callingid') %> <% end %>
    </span>
  </h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= t('callingids.fields.customer') %></th>
    <th><%= t('callingids.fields.agent') %></th>
    <th><%= t('callingids.fields.callingid') %></th>
    <th><%= t('shared.created_at') %></th>
    <th><%= t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @calling_ids.each do |calling_id| %>
      <tr>
        <td><%= link_to calling_id.user.full_name, user_path(calling_id.user) %></td>
        <td><%= link_to calling_id.user.agent.business_name, user_path(calling_id.user.agent) unless calling_id.user.agent.nil? %></td>

        <td><%= calling_id.call_id %></td>
        <td><%= l calling_id.created_at, format: :short %></td>
        <td>
          <div class="btn-group">
          <%= link_to edit_calling_id_path(calling_id), :class => 'btn btn-mini' do %> <i class="icon-edit"></i> <%= t("helpers.links.edit") %><% end %>
          <%= link_to calling_id_path(calling_id),
                      :method => :delete,
                      :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                      :class => 'btn btn-mini btn-danger' do %> <i class="icon-edit"></i> <%= t("helpers.links.destroy") %><% end %>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>


