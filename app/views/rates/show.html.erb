
<div class="page-header">
  <h1>

    <%= "#{@rate.direction.capitalize} #{t('rates.text.call')} #{@rate.country}" %>

    <span class="pull-right">
<div class="btn-group">
  <%= link_to rates_path, :class => 'btn' do %> <i class="icon-arrow-left"></i> <%= t("helpers.links.back") %>
  <% end %>
  <%= link_to edit_rate_path(@rate), :class => 'btn' do %>
      <i class="icon-edit"></i>  <%= t("helpers.links.edit") %>
  <% end %>
  <%= link_to rate_path(@rate), :method => 'delete',
              :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
              :class => 'btn btn-danger' do %> <i class="icon-remove"></i> <%= t("helpers.links.destroy") %>
  <% end %>
</div>
      </span>

  </h1>
</div>


<div class="row-fluid">
  <div class="span6">

    <div class="well well-small">
      <h4><%= t('rates.titles.country_info') %></h4>
      <hr>
    <dl class="dl-horizontal">
      <dt><strong><%= t('rates.fields.direction') %>:</strong></dt>
      <dd><%= @rate.direction %></dd>
      <dt><strong><%= t('rates.fields.country') %>:</strong></dt>
      <dd><%= @rate.country %></dd>
        <dt><strong><%= t('rates.fields.country_code') %>:</strong></dt>
        <dd><%= @rate.country_code %></dd>
        <dt><strong><%= t('rates.fields.country_iso') %>:</strong></dt>
        <dd><%= @rate.country_iso %></dd>
        <dt><strong><%= t('rates.fields.prefix') %>:</strong></dt>
      <dd><%= @rate.prefix %></dd>
      </dl>
    </div>
  </div>
  <div class="span6">
    <div class="well well-small">
      <h4><%= t('rates.titles.voice_rate') %></h4>
      <hr>
      <dl class="dl-horizontal">
        <dt><strong><%= t('rates.fields.voice_rate') %>:</strong></dt>
        <dd><%= @rate.voice_rate %></dd>
        <dt><strong><%= t('rates.fields.unit_in_seconds') %>:</strong></dt>
        <dd><%= @rate.unit_in_seconds %></dd>
        <dt><strong><%= t('rates.fields.number_type') %>:</strong></dt>
        <dd><%= @rate.number_type %></dd>
        <dt><strong><%= t('rates.fields.rent_per_number') %>:</strong></dt>
        <dd><%= @rate.rent_per_number %></dd>
        <dt><strong><%= t('rates.fields.setup_cost_per_number') %>:</strong></dt>
        <dd><%= @rate.setup_cost_per_number %></dd>
      </dl>
    </div>
  </div>
</div>







